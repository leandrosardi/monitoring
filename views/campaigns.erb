	<section class="row-fluid">	
		<div class="span6">
		    <%=nav3("Monotoring", "/monitoring", "Agency", "/monitoring/agency", "Campaigns")%>
		</div>
		<div class="span6" style='text-align:right;'>
            <div class="pull-right">
                <form action="/monitoring/agency/campaigns" method="get">
                    <div class="span8">
                        <input type='text' class='input-block-level select-all-on-focus' id='search_keyword' name='search_keyword' value='<%=search_keyword.encode_html%>' />
                    </div>
                    <button class="btn btn-blue btn-medium btn-submit" style="margin-left: 2px;" type="submit">
                        <i class='icon-search'></i> Search
                    </button>
                </form>
            </div>    

            <div class='btn-group'>
                <a href='/monitoring/agency/campaigns?search_premium=<%=search_premium ? "false" : "true"%>' class='btn btn-blue <%=search_premium ? "active" : ""%>' id='premium_only' name='premium_only' title='Show Premium Users Only'><i class='icon-star'></i></a>
                <a href='/monitoring/agency/campaigns?search_on=<%=search_on ? "false" : "true"%>' class='btn btn-blue <%=search_on ? "active" : ""%>' id='on_only' name='on_only' title='Show Active Campaigns Only'><i class='icon-ok'></i></a>
            </div>
        </div>
	</section>
</div>

<!-- Single Panel -->
<section class="row-fluid">
	<div class="span12 box">
        <p><b>Records:</b> <%=from_row.to_i.to_label%> to <%=to_row.to_i.to_label%> <b>of</b> <%=total_rows.to_i.to_label%></p>
        <input type='hidden' name='aids' id='aids' value='' />
        <table class="table table-condensed" style="table-layout: fixed; width: 100%;">
            <thead>
                <th style="width:24px;"><input type='checkbox' class='select-all-rows' data-input-id='aids' data-rows-group-id='accounts'></th>
                <th style="width:auto;">Account<br/>Name</th>
                <th style="width:24px;"><i class='icon-star'></i></th>
                <!--
                <th style="width:125px;">User<br/>Name</th>
                <th style="width:125px;">User<br/>Email</th>
                -->
                <th style="width:125px;background-color:<%=bgcolor%>;">Campaign<br/>Name</th>
                <th style="width:48px;background-color:<%=bgcolor%>;">Campaign<br/>Status</th>
                <th style="width:45px;text-align:right;background-color:<%=bgcolor%>;">Left</th>
                <th style="width:45px;text-align:right;background-color:<%=bgcolor%>;">Sent</th>
                <th style="width:55px;text-align:right;background-color:<%=bgcolor%>;">+Replies</th>

                <!--
                <th style="width:55px;text-align:right;">Active<br/>Subscr.</th>
                <th style="width:55px;text-align:right;">Lead<br/>Credits</th>
                <th style="width:55px;text-align:right;">Email<br/>Credits</th>
                -->

                <th style="width:125px;">Order<br/>Name</th>
                <th style="width:75px;text-align:right;">Search<br/>Scope</th>
                <th style="width:45px;text-align:right;">Search<br/>%</th>
                <th style="width:55px;text-align:right;">Leads<br/>Scraped</th>
                <th style="width:55px;text-align:right;">Leads<br/>Appended</th>

                <th style="width:16px;"><!-- access link --></th>
            </thead>
            <tbody>
                <%
                i = 0
                DB[q].all do |row|
                    i += 1
                %>
                <tr>
                    <th><input type='checkbox' class='select-row' data-id='<%=row[:id].to_guid%>' data-uid='<%=row[:id_user].to_guid%>' data-rows-group-id='accounts' <%=ids.include?(row[:id].to_guid) ? 'checked' : ''%> /></th>
                    <td class="fix" title="<%=row[:account_name].to_s.encode_html%>">
                        <%=row[:account_name].to_s.encode_html%><br/>
                        <span style='color:gray;'><%=row[:id].to_s.encode_html%></span>
                    </td>
                    <td class="fix" title="<%=row[:premium].to_s.encode_html%>">
                        <%=row[:premium] ? '<i class="icon-ok" style="color:blue"></i>' : '<i class="icon-remove" style="color:red"></i>'%>
                    </td>
                    <td class="fix" title="<%=row[:campaign_name].to_s.encode_html%>" style='background-color:<%=bgcolor%>;'>
                        <%=row[:campaign_name].to_s.encode_html%>
                    </td>
                    <td class="fix" title="<%=BlackStack::Emails::Campaign.status_name(row[:status].to_i)%>" style='background-color:<%=bgcolor%>;'>
                        <span class='badge badge-<%=BlackStack::Emails::Campaign.status_color(row[:status].to_i)%>'><%=BlackStack::Emails::Campaign.status_name(row[:status].to_i)%></span>
                    </td>

                    <td class="fix" title="<%=row[:left].to_i.to_label.encode_html%>" style="text-align:right;background-color:<%=bgcolor%>;">
                        <%=row[:left].to_i.to_label%>
                    </td>
                    <td class="fix" title="<%=row[:sents].to_i.to_label.encode_html%>" style="text-align:right;background-color:<%=bgcolor%>;">
                        <%=row[:sents].to_i.to_label%>
                    </td>
                    <td class="fix" title="<%=row[:positive_replies].to_i.to_label.encode_html%>" style="text-align:right;background-color:<%=bgcolor%>;">
                        <%=row[:positive_replies].to_i.to_label%><br/>
                        <%
                        # canculate the percentage of positive replies, with 4 decimals
                        percent = 0
                        if row[:sents].to_i > 0
                            percent = (row[:positive_replies].to_f / row[:sents].to_f) * 100
                            percent = percent.round(4)
                        end
                        %>
                        <span style='color:gray;'><%=percent.to_s.encode_html%>%</span>
                    </td>

                    <td class="fix" title="<%=row[:order_name].to_s.encode_html%>">
                        <%=row[:order_name].to_s.encode_html%>
                    </td>
                    <td class="fix" title="<%=row[:dfyl_stat_search_leads].to_i.to_label.encode_html%>" style="text-align:right;">
                        <%=row[:dfyl_stat_search_leads].to_i.to_label%>
                    </td>
                    <td class="fix" title="<%=row[:dfyl_stat_progress].to_i.to_label.encode_html%>" style="text-align:right;">
                        <%=row[:dfyl_stat_progress].to_i.to_label%>%
                    </td>
                    <td class="fix" title="<%=row[:dfyl_stat_scraped_leads].to_i.to_label.encode_html%>" style="text-align:right;">
                        <%=row[:dfyl_stat_scraped_leads].to_i.to_label%><br/>
                        <span style='color:gray;'><%=row[:dfyl_stat_progress].to_i.to_label%>%</span>
                    </td>
                    <td class="fix" title="<%=row[:dfyl_stat_leads_appended].to_i.to_label.encode_html%>" style="text-align:right;">
                        <%=row[:dfyl_stat_leads_appended].to_i.to_label%><br/>
                        <%
                        # calculate the percentage of leads appended, with 4 decimals
                        percent = 0
                        if row[:dfyl_stat_scraped_leads].to_i > 0
                            percent = (row[:dfyl_stat_leads_appended].to_f / row[:dfyl_stat_scraped_leads].to_f) * 100
                            percent = percent.round(4)
                        end
                        %>
                        <span style='color:gray;'><%=percent.to_i.to_label%>%</span>
                    </td>

                    <!--
                    <td class="fix" title="<%=row[:leads_credits].to_i.to_label.encode_html%>" style="text-align:right;">
                        <%=row[:leads_credits].to_i.to_label%>
                    </td>
                    <td class="fix" title="<%=row[:emails_credits].to_i.to_label.encode_html%>" style="text-align:right;">
                        <%=row[:emails_credits].to_i.to_label%>
                    </td>
                    -->

                    <td class="fix" title="Account Access Link. Paste it into another browser." style='text-align:center;'>
                        <button class='btn btn-link secret_login' name='secret_login'><i class="icon-copy"></i></button>
                    </td>
                </tr>
                <%
                end

                if i==0
                %>
                <tr>
                    <td colspan="11" class="fix" align='center' style='text-align:center;'>
                        No users found.
                    </td>
                <tr>
                <%
                end
                %>
            </tbody>
        </table>
        <div class="pagination"></div>
    </div>
</section>

