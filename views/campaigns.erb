<%
bgcolor='rgb(225,225,225)'
search_keyword = @login.user.preference('monitoring.agency.campaigns.search_keyword', '', params[:search_keyword])
search_premium = @login.user.preference('monitoring.agency.campaigns.search_premium', false, params[:search_premium].nil? ? nil : params[:search_premium].to_s == 'true')
search_on = @login.user.preference('monitoring.agency.campaigns.search_on', false, params[:search_on].nil? ? nil : params[:search_on].to_s == 'true')
selected_ids = @login.user.preference('monitoring.agency.campaigns.selected_ids', '', nil)
ids = selected_ids.split(',')

all = "
select 
    a.id,
    u.id as id_user,
	a.name as account_name, 
    a.premium,
	u.email, 
	c.name as campaign_name,
	max(f.status) as status, 

    c.stat_left as left,
	sum(t.stat_sents) as sents,
	sum(t.stat_positive_replies) as positive_replies,
	
	o.name as order_name,
	o.dfyl_stat_search_leads,
	o.dfyl_stat_progress,
	o.dfyl_stat_scraped_leads,
	o.dfyl_stat_leads_appended
	
from account a 
join \"user\" u on (a.id=u.id_account and u.id=a.id_user_to_contact)

/*left*/ join \"user\" v on a.id=v.id_account
/*left*/ join eml_campaign c on ( v.id=c.id_user )
left join eml_followup f on c.id=f.id_campaign
left join eml_timeline t on ( c.id=t.id_campaign and t.create_time>'2023-01-01' )


left join fl_export e on e.id=c.id_export
left join fl_search h on h.id=e.id_search 
left join scr_order o on o.id=h.id_order 

where 1=1
"

all += " 
    and (
        lower(a.name) like '%#{search_keyword.downcase.to_sql}%' or
        lower(u.email) like '%#{search_keyword.downcase.to_sql}%' or
        lower(u.name) like '%#{search_keyword.downcase.to_sql}%' or
        lower(u.phone) like '%#{search_keyword.downcase.to_sql}%' or 
        lower(c.name) like '%#{search_keyword.downcase.to_sql}%'
    )
" unless search_keyword.empty?

all += "
    and a.premium=true
" unless !search_premium

all += "
group by 
    a.id,
    u.id,
	a.name, 
    a.premium,
	u.email, 
	c.name, 
    c.stat_left,
	o.name,
	o.dfyl_stat_search_leads,
	o.dfyl_stat_progress,
	o.dfyl_stat_scraped_leads, 
	o.dfyl_stat_leads_appended
"

all += "
having max(f.status) = #{BlackStack::Emails::Campaign::STATUS_ON}
" if search_on

all += "
order by a.name asc
"

# TODO: use re-utilizable function here.
page_size = 25
total_rows = DB[all].count
if total_rows>0
  total_pages = (total_rows.to_f/page_size.to_f).ceil
  # if there is a GET parameters `number` on the URL, update the user preference regarding the page number on this screen
  # then, get user preferences regarding the page number on this screen
  page_number = @login.user.preference("emails.addresses.pagination.page", 1, params[:number].nil? ? nil : params[:number].to_i)
  # pagination correction to prevent glitches
  page_number = 1 if page_number < 1
  page_number = total_pages if page_number > total_pages
  # calculate info for showing at the bottom of the table
  from_row = (page_number.to_i-1) * page_size.to_i + 1
  to_row = [page_number*page_size, total_rows].min
else
  total_pages = 1
  page_number = 1
  from_row = 0
  to_row = 0
end

q = "
"+all+"
  LIMIT #{page_size.to_s}
  OFFSET #{((page_number.to_i - 1) * page_size.to_i).to_s}
"
%>

<!-- NavBar -->
